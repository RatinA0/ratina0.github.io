---
import CallToActionButton from './CallToActionButton.astro';

export interface Props {
  text: string;
  href: string;
  tooltip?: string;
  primary?: boolean;
  openOnNewTab?: boolean;
}

const { text, href, tooltip, primary = false, openOnNewTab = true } = Astro.props;
---

<CallToActionButton
  callToAction={{
    text: text,
    href: href,
    tooltip: tooltip,
    icon: 'tabler:download',
    openOnNewTab: openOnNewTab,
  }}
  divClasses={'flex w-full sm:w-auto not-prose'}
  btnClasses={'sm:mb-0 w-full'}
  primary={primary}
/>
