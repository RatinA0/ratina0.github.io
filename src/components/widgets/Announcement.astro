---
import { projectVersions } from '~/content/projectVersions';
import { getFormattedDate } from '~/utils/utils';

const mainProjectSlug = 'vegas-pro-flow';
const mainProjectName = 'Vegas Pro Flow';
const lastUpdatedProject = projectVersions.find((x) => x.project == mainProjectSlug)?.versions?.at(0);
const releaseDate = getFormattedDate(lastUpdatedProject?.releaseDate ?? new Date());
const releaseNumber = lastUpdatedProject?.release ?? '0.0.0';
---

<div
  class="hidden md:block bg-blue-50 dark:bg-slate-800 dark:border-slate-800 dark:text-slate-400 border-b border-blue-200 text-sm px-3 py-2 text-gray-500 overflow-hidden whitespace-nowrap text-ellipsis"
>
  <span class="text-xs py-0.5 px-1 bg-primary dark:bg-slate-700 dark:text-slate-300 font-semibold text-gray-200"
    >NEW</span
  >

  {releaseDate} -

  <a href=`https://ratinfx.github.io/${mainProjectSlug}/#latest-version` class="highlight-link"> {mainProjectName}</a>

  {releaseNumber} release is live!
</div>
