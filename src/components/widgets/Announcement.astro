---
import { projectVersions } from '~/content/projectVersions';
import { getFormattedDate } from '~/utils/utils';

const projectSlug = 'vegas-pro-flow';
const projectName = 'Vegas Pro Flow';

const lastUpdatedProject = projectVersions.find((x) => x.project == projectSlug)?.versions[0];
const releaseDate = getFormattedDate(lastUpdatedProject?.releaseDate ?? new Date());
const releaseNumber = lastUpdatedProject?.release ?? '0.0.0';
---

<div
  class="hidden md:block bg-blue-50 dark:bg-slate-800 dark:border-slate-800 dark:text-slate-400 border-b border-blue-200 text-sm px-3 py-2 text-gray-200 overflow-hidden whitespace-nowrap text-ellipsis"
>
  <span class="text-xs py-0.5 px-1 bg-primary dark:bg-slate-700 dark:text-slate-300 font-semibold">NEW</span>

  <a href=`https://ratinfx.github.io/${projectSlug}/#latest-version` class="highlight-link">
    {releaseDate} - {projectName}
    {releaseNumber} release is live!
  </a>
</div>
