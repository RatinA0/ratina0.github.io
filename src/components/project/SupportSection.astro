---
import CallToAction from '../widgets/CallToAction.astro';

const supportSubtitle =
  'If you enjoy my work, please consider showing your support by following or donating! ' +
  'Your contribution can make a significant difference.';

const contactSubtitle =
  'Got any feedback or question?</br> Contact me ' +
  '<span class="highlight">through my <b>Socials</b></span> (most active on ' +
  'Discord: <span class="highlight">Martin#2426</span>) </br>' +
  'or email me';
---

<CallToAction
  title="Support me"
  subtitle={supportSubtitle}
  callToAction={{
    icon: 'tabler:rocket',
    text: 'Donate',
    tooltip: "Tell me you're from this site if you do so!",
    href: 'https://streamlabs.com/RatinFX/tip',
    openOnNewTab: true,
  }}
/>

<CallToAction
  title="Contact me"
  subtitle={contactSubtitle}
  callToAction={{
    icon: 'tabler:brand-discord',
    text: 'Discord server',
    href: 'https://discord.gg/3Quqz28',
  }}
  callToAction2={{
    icon: 'tabler:at',
    text: 'Email',
    href: 'mailto:martindotwork@gmail.com',
  }}
/>
