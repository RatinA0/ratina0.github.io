---
interface Props {
  vertical?: boolean;
  classes?: string;
  color?: string;
}

const { vertical = false, classes, color = "black" } = Astro.props as Props;
---

<div class:list={["divider", vertical ? "divider-vertical" : "", classes]}>
</div>

<style define:vars={{ color }}>
  /* Divider */
  :global(.divider) {
    border: solid var(--color);
    border-width: thin 0 0 0;
    display: block;
    flex: 1 1 0px;
    max-width: 100%;
    height: 0px;
    max-height: 0px;
    transition: inherit;
  }

  :global(.divider.divider-vertical) {
    border: solid var(--color);
    border-width: 0 thin 0 0;
    display: inline-flex;
    align-self: stretch;
    height: inherit;
    min-height: 100%;
    max-height: 100%;
    max-width: 0px;
    width: 0px;
    vertical-align: text-bottom;
    margin: 0 -1px;
  }
</style>
