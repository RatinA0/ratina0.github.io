---
import { SITE } from '~/config.mjs';
import { getPermalink } from '~/utils/permalinks';
import { workExperience } from '~/data';

import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Features2 from '~/components/widgets/Features2.astro';
import LatestProjects from '~/components/project/LatestProjects.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const meta = {
  title: SITE.title,
  description: SITE.description,
  dontUseTitleTemplate: true,
};
---

<Layout {meta}>
  <Hero
    callToAction={{
      text: 'Support me by donating',
      href: 'https://streamlabs.com/RatinFX/tip',
      icon: 'tabler:rocket',
      openOnNewTab: true,
    }}
    callToAction2={{
      text: 'Projects',
      href: getPermalink('/projects'),
      icon: 'tabler:braces',
    }}
  >
    <Fragment slot="title">
      Hi there! I'm <span class="highlight"> Martin</span>
    </Fragment>

    <Fragment slot="subtitle">
      <span class="sm:inline">
        <!-- Continue title -->
        also known as <span class="font-semibold highlight">MartinFX</span>
        or <span class="font-semibold highlight" title="Formerly RatinA0">RatinFX</span>.
        <br />
        <br />

        <!-- Lyric videos -->
        You might know me for creating YouTube videos like
        <a class="font-semibold highlight-link" href="https://www.youtube.com/watch?v=h-mUGj41hWA">
          NOMA - Brain Power | LYRICS!</a
        >

        <!-- Work -->
        <br />
        I'm also a <span class="font-semibold">software developer</span> who created
        <span class="font-semibold">extensions</span> for
        <span class="font-semibold"> VEGAS Pro</span>, some being open-source on my Github page.
      </span>
    </Fragment>
  </Hero>

  <LatestProjects title="Latest Projects" />

  <Features2 title="Work experience" id="work-experience" items={workExperience} />

  <CallToAction
    title="Support me"
    subtitle="If you enjoy my work, please consider showing your support by following or donating! Your contribution can make a significant difference."
    callToAction={{
      text: 'Donate',
      href: 'https://streamlabs.com/RatinFX/tip',
    }}
  />
</Layout>
