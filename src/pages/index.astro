---
import { SITE } from '~/config.mjs';
import { getPermalink } from '~/utils/permalinks';

import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Features2 from '~/components/widgets/Features2.astro';
import LatestProjects from '~/components/project/LatestProjects.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const meta = {
  title: SITE.title,
  description: SITE.description,
  dontUseTitleTemplate: true,
};
---

<Layout {meta}>
  <Hero
    callToAction={{
      text: 'Support me by donating',
      href: 'https://streamlabs.com/RatinA0/tip',
      icon: 'tabler:rocket',
      openOnNewTab: true,
    }}
    callToAction2={{
      text: 'Projects',
      href: getPermalink('/projects'),
      icon: 'tabler:braces',
    }}
  >
    <Fragment slot="title">
      Hi there! I'm <span class="text-primary dark:text-blue-400"> Martin</span>
    </Fragment>

    <Fragment slot="subtitle">
      <span class="sm:inline">
        <!-- Continue title -->
        also known as <span class="text-primary dark:text-blue-400 font-semibold">MartinFX</span>
        or <span class="text-primary dark:text-blue-400 font-semibold">RatinA0</span>.
        <br />
        <br />

        <!-- Lyric videos -->
        You might know me for creating YouTube videos like
        <a
          class="text-primary dark:text-blue-400 font-semibold hover:text-blue-600 dark:hover:text-blue-300"
          href="https://www.youtube.com/watch?v=h-mUGj41hWA"
        >
          NOMA - Brain Power | LYRICS!
        </a>

        <!-- Work -->
        <br />
        I'm also a <span class="font-semibold">software developer</span> who also created
        <span class="font-semibold">extensions</span> for
        <span class="font-semibold"> VEGAS Pro</span>, some being open-source on my Github page.
      </span>
    </Fragment>
  </Hero>

  <Features2
    title="Work experience"
    id="work-experience"
    items={[
      {
        title: 'Unity Developer',
        timeFrame: '2022. Sept - 2023.',
        description: '- AR Book for Android and iOS <br/>' + '- Other project: Unity frontend, Firebase backend' + '',
        icon: 'flat-color-icons:phone-android',
        tags: ['Unity', 'C#', 'Firebase & Functions', 'TypeScript', 'Figma'],
      },
      {
        title: 'Full-stack Web Developer',
        timeFrame: '2021. May - 2022. Sept',
        description:
          '- Vue.js 2 with TypeScript frontend, ASP.NET Core backend <br/>' +
          '- MediatR event handling <br/>' +
          '- SignalR live communication <br/>' +
          '- Cypress E2E testing' +
          '',
        icon: 'vscode-icons:file-type-vue',
        tags: ['ASP.NET Core', 'C#', 'TypeScript', 'HTML', 'Vue.js 2', 'Vuetify', 'SQL'],
      },
      {
        title: 'Video Collaborations',
        timeFrame: '2016 - Present',
        description:
          'I have been involved in organizing and participating in video collaborations with more than 25 individuals.<br/> <br/>' +
          '<a class="text-primary dark:text-blue-400 font-semibold hover:text-blue-600 dark:hover:text-blue-300" ' +
          ' href="https://www.youtube.com/playlist?list=PLbWOgfpY-MeAEQ-baK9VAi_c6KFlqaMye" ' +
          ' target="_blank" rel="noopener" >' +
          'Playlist of related videos' +
          '</a>' +
          '',
        icon: 'logos:youtube-icon',
        tags: ['VEGAS Pro', 'After Effects', 'Premiere Pro', 'Photoshop'],
      },
    ]}
  />

  <LatestProjects title="Latest Projects" />

  <CallToAction
    title="Support me"
    subtitle="If you enjoy my work, please consider showing your support by following or donating! Your contribution can make a significant difference."
    callToAction={{
      text: 'Donate',
      href: 'https://streamlabs.com/RatinA0/tip',
    }}
  />
</Layout>
